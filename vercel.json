{
  "buildCommand": "npm install",
  "devCommand": "node index.js",
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/auth/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/projects/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/users/(.*)",
      "dest": "api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.js"
    }
  ]
}
